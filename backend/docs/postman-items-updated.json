          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"Item_Codigo_SKU\": \"SKU001-UPD\",\n  \"Item_Codigo_Barra\": \"123456789-UPD\",\n  \"Item_Nombre\": \"Producto Actualizado Modificado\",\n  \"Item_Costo_Unitario\": 30.75,\n  \"Item_Stock_Min\": 15,\n  \"Item_Stock_Max\": 150,\n  \"Item_Estado\": true,\n  \"CategoriaItem_Id\": 1,\n  \"UnidadMedidaBase_Id\": 2\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/items/{{itemId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "items", "{{itemId}}"]
        }
      }
    },
